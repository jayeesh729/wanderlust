<% layout("/layouts/boilerplate.ejs")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3><%= listing.title %> </h3>
            <div class="card show-card listing-card">
                <img class="card-img-top show-img" src=<%= listing.image %> alt="Listing_image" >
                <div class="card-body">
                    <p class="card-text"><%= listing.owner.username%></p>
                    <p class="card-text"><%= listing.description%></p>
                    <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN");%> </p>
                    <p class="card-text"><%= listing.location%></p>    
                    <p class="card-text"><%= listing.country%></p>
                </div>
            </div>
            <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
                <div class="btns">
                    <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark edit-btn" >Edit</a>
                    <form method="post" action="/listings/<%= listing.id %>?_method=DELETE"> 
                        <button class="btn offset-4 btn-dark">Delete</button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>
    <div class="row mt-3 mb-3">
        <div class="col-8 offset-2">     
            <form method="post" action="/listings/<%= listing.id %>/reviews" class="form-label needs-validation" novalidate>
                <hr>
                <br>
                <h4>Leave a Review : </h4>
                <div class="col-5">
                    <label for="rating" class="form-label">Ratings</label>
                    <input type="range" class="form-range" step="1" name="review[rating]" id="rating" min="1" max="5">
                </div>
                <div>
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" placeholder="Enter the review" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please provide Comments
                    </div>
                </div>
                <button class="mt-3 btn btn-outline-dark">Submit</button>
            </form>

            <hr></hr>
            <h4>All Reviews</h4>
            <div class="row">
                <% for(let review of listing.reviews){ %>
                    <div class="col-6 mb-3">
                        <div class="card p-4">
                            <div class="card-body">
                                <h5 class="card-title">@<%= review.author.username %></h5>
                                <p class="card-text">Comments : <%= review.comment %> </p>
                                <p><%= review.rating %> stars </p>
                                <form method="POST" action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE">
                                    <button class="btn btn-sm btn-dark ">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

</body>
