<% layout("/layouts/boilerplate.ejs")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Listing Details : </h3>
            <div class="card show-card">
                <img class="card-img-top show-img" src=<%= listing.image %> alt="Listing_image" >
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b> <br>
                        <%= listing.description%> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN");%> <br>
                        <%= listing.location%> <br>
                        <%= listing.country%> <br>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="btns offset-2 ">
        <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark edit-btn" >Edit</a>
        <form method="post" action="/listings/<%= listing.id %>?_method=DELETE"> 
            <button class="btn offset-4 btn-dark">Delete</button>
        </form>
    </div>
</body>
